  "keywords": [
    "step",
    "executor",
    "parallel",
    "sequential",
    "library",
    "workflow",
    "pipeline",
    "automation",
    "decorators",
    "typescript",
    "async",
    "flow-builder",
    "microservices",
    "ci-cd"
  ],
  "author": "Yeison Arango",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.14"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
