    "example:mixed": "npx ts-node src/examples/mixed-pipeline.ts",
    "dev": "npm run build && npm run test",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yarango582/step-executor-lib"
  },
  "bugs": {
